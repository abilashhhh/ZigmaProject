  <section class="pt-100 pb-150 d-flex justify-content-center">
    <div class="container">
      <div class="row">
        <div class="m-auto d-flex justify-content-center">
          <div class="row d-flex col-lg-5 justify-content-center">
            <div class="col-lg-12">
              <div
                class="login_wrap widget-taber-content p-30 background-white border-radius-10 mb-md-5 mb-lg-0 mb-sm-5  border-4">

                <div class="heading_s1">
                  <h3 class="mb-30">Verify OTP to create your account</h3>
                </div>

                <form method="post" action="/verifyotp">
                  <div class="form-group">
                    <input required="" type="number" name="verifyotp" placeholder="Enter the OTP" />
                    <p style="padding: 10px; font-size: 12px">Otp will expire in 60 seconds. After that click resend otp
                      to
                      generate new otp

                    </p>
                    <div class="form-group" style="float: right">

                    </div>
                  </div>

                  <div class="form-group">
                    <button type="submit" class="btn btn-fill-out btn-block hover-up" name="verifyOtp">
                      Verify OTP
                    </button>
                  </div>
                </form>
                <form method="post" action="/resendotp" style="float: right;" onsubmit="resetCountdown();">
                  <button style="padding: 4px; background-color: rgb(36, 123, 78); color: white;" type="submit"
                    class="hover-up" name="resendOtp">
                    Resend OTP
                  </button>
                </form>
                <div class="text-muted text-center">
                  <strong>Already have an account? <a href="/login">Sign in now</a></strong>
                </div>
              </div>
            </div>
            <div class="col-lg-1"></div>
          </div>
        </div>
      </div>
    </div>
  </section>
