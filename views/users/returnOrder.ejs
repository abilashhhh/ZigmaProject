      <form id="returnOrderForm" method="post" action="/returnOrder">

        <input type="hidden" name="returnOrderId" value="<%= returnOrderId %>">
        <input type="hidden" name="productId" value="<%= productId %>">

         <label for="reason">Reason for returning the product:</label>
        <textarea name="reason" id="reason" rows="3" required></textarea>
        
        <button type="button" id="cancelProductButton" class="confirm-cancel-btn" style="color: white; margin: 10px; padding: 10px; background-color: red; border-radius: 10px;">Return Product</button>
