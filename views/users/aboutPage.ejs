                    <% if( categoriesData && categoriesData.length> 1) { %>
                        <% for(let i=0 ; i < categoriesData.length ; i++){ %>
                            <div class="brand-logo">
                                <a href="/shop?categoryName=<%= categoriesData[i].categoryName %>">
                                    <img class="img-grey-hover" src="<%= categoriesData[i].categoryImage%>" alt>
                                </a>

                            </div>
                            <% } %>
                                <% } %>

                </div>
            </div>
        </div>
